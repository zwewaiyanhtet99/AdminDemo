@model ABankAdmin.Models.C_Bulk_File_Record

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bulk File Record</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.Corporate_ID, "Company Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Corporate_ID", (IEnumerable<SelectListItem>)ViewBag.Corporate, "Select Company", new { @class = "form-control", @disabled = "disabled" })
                @*@Html.DropDownList("Corporate_ID", null, htmlAttributes: new { @class = "form-control" })*@
                @Html.ValidationMessageFor(model => model.Corporate_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Max_Record, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Max_Record, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Max_Record, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
                @Html.ActionLink("Cancel", "Index", null, null, new
                {@*href = Request.UrlReferrer,*@ @class = "btn btn-default"
            })
            </div>
        </div>
    </div>
}

@*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@
<!--Sucess Box-->
<div class="modal" id="divUpdateSuccess">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title">Bulk File Record Lists</h4>
            </div>
            <div class="modal-body">
                <p>Successfully updated!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success pull-right" data-dismiss="modal" onclick="window.location = '/bulkfilerecord/Index';">OK</button>
            </div>
        </div>
    </div>
</div>
@section Scripts
    {

    @if (ViewBag.bulkfilerecord != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                var $confirm = $("#divUpdateSuccess");
                $confirm.show();
            }
        </script>
    }
}
