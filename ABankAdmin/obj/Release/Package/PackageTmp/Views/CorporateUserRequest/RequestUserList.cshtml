@{
    ViewBag.Title = "Request User List";
}

<h2>Request User List</h2>

<p>
    @Html.ActionLink("Register User", "RequestCorporateUser")
</p>
@using (Html.BeginForm("RequestUserList", "CorporateUserRequest", FormMethod.Get, new { id = "RequestUserList" }))
{
    @Html.AntiForgeryToken();
    <input type="hidden" id="regId" name="regId" />
    <input type="hidden" id="regStatus" name="regStatus" />
    <div class="row">
        @*Company Name*@
        <div class="form-group col-md-2">
            <label>Company Name</label>
            <input type="text" name="companyName" id="companyName" class="form-control" />
        </div>

        @*Corporate ID*@
        <div class="form-group col-md-2">
            <label>Corporate ID</label>
            <input type="text" name="corporateID" id="corporateID" class="form-control" />
        </div>

        @*User Name*@
        <div class="form-group col-md-2">
            <label>User Name</label>
            <input type="text" name="userName" id="userName" class="form-control" />
        </div>

        @*User Role*@
        <div class="form-group col-md-2">
            <label>User Role</label>
            @Html.DropDownList("userRole", null, "-- Select One --", htmlAttributes: new { @class = "form-control" })
        </div>

        @*FromDate*@
        <div class="form-group col-md-2">
            <label>From Date</label>
            <div class="input-group date" id="FromDate">
                @Html.TextBox("fromDate", null, new { @class = "form-control inputField", placeholder = "From Date", autocomplete = "off", onkeydown = "event.preventDefault()" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>

        @*ToDate*@
        <div class="form-group col-md-2">
            <label>To Date</label>
            <div class="input-group date" id="ToDate">
                @Html.TextBox("toDate", null, new { @class = "form-control inputField", placeholder = "To Date", autocomplete = "off", onkeydown = "event.preventDefault()" })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="row">
        @*Type*@
        <div class="form-group col-md-2">
            <label>Type</label>
            @Html.DropDownList("userType", null, "-- Select One --", htmlAttributes: new { @class = "form-control" })
        </div>

        @*Status*@
        <div class="form-group col-md-2">
            <label>Status</label>
            @Html.DropDownList("status", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group col-md-2" style="padding-top:4px;">
            <br />
            <input type="submit" value="Search" class="btn " id="btnSearch" />
        </div>
    </div>
}
