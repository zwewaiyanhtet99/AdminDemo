@{
    ViewBag.Title = "Corporate User List";
}

<h2>Corporate User List</h2>

<p>
    @Html.ActionLink("Register User", "RequestCorporateUser")
</p>
@using (Html.BeginForm("CorporateUserList", "CorporateUserRequest", FormMethod.Get, new { id = "CorporateUserList" }))
{
    @Html.AntiForgeryToken();
    <input type="hidden" id="regId" name="regId" />
    <input type="hidden" id="signinStatus" name="signinStatus" />
    <input type="hidden" id="tranStatus" name="tranStatus" />
    <div class="row">
        @*Company Name*@
        <div class="form-group col-md-2">
            <label>Company Name</label>
            <input type="text" name="companyName" id="companyName" class="form-control" />
        </div>

        @*Corporate ID*@
        <div class="form-group col-md-2">
            <label>Corporate ID</label>
            <input type="text" name="corporateID" id="corporateID" class="form-control" />
        </div>

        @*User Name*@
        <div class="form-group col-md-2">
            <label>User Name</label>
            <input type="text" name="userName" id="userName" class="form-control" />
        </div>

        @*Phone No*@
        <div class="form-group col-md-2">
            <label>Phone No.</label>
            <input type="text" name="phoneNo" id="phoneNo" class="form-control" />
        </div>

        @*User Role*@
        <div class="form-group col-md-2">
            <label>User Role</label>
            @Html.DropDownList("userRole", null, "-- Select One --", htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group col-md-2" style="padding-top:4px;">
            <br />
            <input type="submit" value="Search" class="btn" id="btnSearch" />
        </div>
    </div>
}
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover nowrap" id="myTable">
        <thead>
            <tr class="active">
                <th>
                </th>
                <th>
                    COMPANY NAME
                </th>
                <th>
                    CORPORATE ID
                </th>
                <th>
                    USERNAME
                </th>
                <th>
                    FULLNAME
                </th>
                <th>
                    PHONE NO
                </th>
                <th>
                    USER ROLE
                </th>
                <th>
                    SIGNIN_LOCK
                </th>
                <th>
                    TRANACTION_LOCK
                </th>
            </tr>
        </thead>
    </table>
</div>
<div class="form-group">

    <button class="btn btn-success" id="btnEdit">Edit</button>
    <button class="btn btn-default" id="btnDetails">Details</button>
    <button class="btn btn-danger" id="btnDelete">Delete</button>

    <button class="btn btn-info" id="btnReset">Reset Password</button>
    <button class="btn btn-warning" id="btnSignin">Signin Lock/Unlock</button>
    <button class="btn btn-primary" id="btnTran">Tran Lock/Unlock</button>
</div>

@section Scripts{
    <script src="~/Scripts/bootbox.js"></script>
    @Scripts.Render("~/bundles/userreglst")
}