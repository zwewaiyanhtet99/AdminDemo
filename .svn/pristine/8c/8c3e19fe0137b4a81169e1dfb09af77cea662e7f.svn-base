@{
    ViewBag.Title = "BillerList";
}

<h2>Biller List</h2>

<p>
    @Html.ActionLink("Register Biller", "BillerRegistration")
</p>
@using (Html.BeginForm("BillerList", "Biller", FormMethod.Get, new { id = "BillerList" }))
{
    @Html.AntiForgeryToken();
    <input type="hidden" id="billerId" name="billerId" />
    <input type="hidden" id="billerStatus" name="billerStatus" />
    <div class="row">
        @*Name*@
        <div class="form-group col-md-2">
            <label>Name</label>
            <input type="text" name="Name" id="Name" class="form-control" />
        </div>

        @*BillerCode*@
        <div class="form-group col-md-2">
            <label>Biller Code</label>
            <input type="text" name="BillerCode" id="BillerCode" class="form-control" />
        </div>

        @*BillerType*@
        <div class="form-group col-md-2">
            <label>Biller Type</label>
            @Html.DropDownList("BillerType", null, "-- Select One --", htmlAttributes: new { @class = "form-control" })
        </div>

        @*Currency*@
        <div class="form-group col-md-2">
            <label>Currency</label>
            @Html.DropDownList("Currency", null, "-- Select One --", htmlAttributes: new { @class = "form-control" })
        </div>

        @*Status*@
        <div class="form-group col-md-2">
            <label>Status</label>
            @Html.DropDownList("Status", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group col-md-2" style="padding-top:4px;">
            <br />
            <input type="submit" value="Search" class="btn " id="btnSearch" />
        </div>
    </div>
}
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover nowrap" id="myTable">
        <thead>
            <tr class="active">
                <th>
                </th>
                <th>
                    NAME
                </th>
                <th>
                    Biller Code
                </th>
                <th>
                    CreditAccountNo
                </th>
                <th>
                    BillerType
                </th>
                <th>
                    Currency
                </th>
                <th>
                    Status
                </th>
            </tr>
        </thead>
    </table>
</div>
<div class="form-group">

    <button class="btn btn-success" id="btnEdit">Edit</button>
    <button class="btn btn-default" id="btnDetails">Details</button>
    <button class="btn btn-danger" id="btnStatus">Enable</button>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootbox.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    @Scripts.Render("~/bundles/billerlst")
}